<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.StartGameController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
            <ImageView fitHeight="500.0" fitWidth="500.0" layoutX="300.0"  >
                <image>
                    <Image url="@Resources/GameBoard2.png" />
                </image>
            </ImageView>
        <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="10.0" layoutY="100"  >
            <image>
                <Image url="@Resources/Red.png" />
            </image>
        </ImageView>
        <Text layoutX="100" layoutY="120">Player 1</Text>
        <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="10.0" layoutY="200" >
            <image>
                <Image url="@Resources/blue.png" />
            </image>
        </ImageView>
        <Text layoutX="100" layoutY="220">Player 2</Text>
        <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="200.0" layoutY="150" onMouseClicked="#roll">
            <image>
                <Image url="@Resources/Dice.png" />
            </image>
        </ImageView>
        <Text fx:id="turnBanner" layoutX="200" layoutY="100">Player 1 turn</Text>
        <Text layoutX="200" layoutY="120">Roll the Dice</Text>
        <Text layoutX="200" layoutY="250">You got:</Text>
        <Text fx:id="number" layoutX="220" layoutY="280"></Text>


        <ImageView fx:id="player1" fitHeight="30.0" fitWidth="30.0" layoutX="250.0" layoutY="470"  >
            <image>
                <Image url="@Resources/Red.png" />
            </image>
        </ImageView>
        <ImageView fx:id="player2" fitHeight="30.0" fitWidth="30.0" layoutX="270.0" layoutY="470" >
            <image>
                <Image url="@Resources/blue.png" />
            </image>
        </ImageView>

    </children>

</AnchorPane>
